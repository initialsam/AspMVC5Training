                @Html.TextBoxFor(model => model.IpV4, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IpV4, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IpV6, htmlAttributes: new { @class = "control-label col-md-2" })
